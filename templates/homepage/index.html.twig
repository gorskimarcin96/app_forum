{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="inner-wrapper">
        <div class="inner-sidebar bg-main">
            <div class="inner-sidebar-header">
                <button class="btn btn-primary has-icon btn-block" type="button" data-toggle="modal"
                        data-target="#threadModal">
                    NEW DISCUSSION
                </button>
            </div>

            <div class="inner-sidebar-body p-3">
                <nav class="nav nav-pills flex-column">
                    <a href="#" class="nav-link active">All Threads</a>
                    <a href="#" class="nav-link">Popular this week</a>
                </nav>
            </div>
        </div>

        <div class="inner-main">
            <div class="inner-main-header bg-main">
                <select class="form-control w-auto mr-1">
                    <option>Latest</option>
                </select>
                <span class="ml-auto">
                    <input type="text" class="form-control my-4" placeholder="Search forum"/>
                </span>
            </div>

            <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">
                {% for i in 0..2 %}
                    <div class="card mb-2 bg-main">
                        <div class="card-header">
                            <a href="#" class="font-weight-bolder">Realtime fetching data</a>
                        </div>
                        <div class="card-body">
                            <div class="row w-100">
                                <div class="col-md-2 col-3 text-center">
                                    <a href="#">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png"
                                             class="rounded-circle" width="50" alt="User"/>
                                        Andrzej
                                    </a>
                                </div>
                                <div class="col-md-10 col-9">
                                    <p>
                                        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad animi dolorem esse incidunt iusto natus necessitatibus, odio odit, quas quidem, ratione sapiente tempore totam veniam vero. Laborum nam necessitatibus quia.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row w-100">
                                <div class="col-10">
                                    Replied <b>13 minutes ago</b>
                                </div>
                                <div class="col-2 text-right small">
                                    <div><i class="fas fa-eye"></i> 19</div>
                                    <div><i class="fas fa-comment-alt"></i> 33</div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="modal fade" id="threadModal" tabindex="-1" role="dialog" aria-labelledby="threadModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content bg-main">
                <form>
                    <div class="modal-header d-flex align-items-center bg-primary  border-secondary">
                        <h6 class="modal-title mb-0" id="threadModalLabel">New Discussion</h6>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Form
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
